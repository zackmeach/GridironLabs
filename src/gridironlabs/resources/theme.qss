/* Dark theme inspired by the provided reference. */
QWidget {
    background-color: #0f1115;
    color: #e5e7eb;
    font-family: "Roboto Condensed", "Inter", "Segoe UI", sans-serif;
    font-size: 17px;
}

/* Scrollbars
   - Default: keep platform scrollbars (important for QTableView / high-row-count tables).
   - OOTP-style variant: hide scrollbars visually while keeping scrolling enabled. */

QAbstractScrollArea[scrollVariant="hidden"] QScrollBar:vertical,
QAbstractScrollArea[scrollVariant="hidden"] QScrollBar:horizontal {
    background: transparent;
}

QAbstractScrollArea[scrollVariant="hidden"] QScrollBar:vertical {
    width: 0px;
    margin: 0px;
}

QAbstractScrollArea[scrollVariant="hidden"] QScrollBar:horizontal {
    height: 0px;
    margin: 0px;
}

QAbstractScrollArea[scrollVariant="hidden"] QScrollBar::handle:vertical,
QAbstractScrollArea[scrollVariant="hidden"] QScrollBar::handle:horizontal,
QAbstractScrollArea[scrollVariant="hidden"] QScrollBar::add-line,
QAbstractScrollArea[scrollVariant="hidden"] QScrollBar::sub-line,
QAbstractScrollArea[scrollVariant="hidden"] QScrollBar::add-page,
QAbstractScrollArea[scrollVariant="hidden"] QScrollBar::sub-page {
    background: transparent;
    border: none;
}

QAbstractScrollArea[scrollVariant="hidden"]::corner {
    background: transparent;
}

