/* --- OOTP-style Panel Chrome --- */

/* Panel Container */
QFrame#PanelChrome {
    background-color: #252525;
    border: 1px solid #20242d;
    border-radius: 4px; /* Slightly tighter radius */
}

QFrame#PanelChrome QWidget {
    background-color: transparent;
}

/* Panel variants
   Note: layout padding is handled in code (PanelChrome body layout margins).
   These selectors exist so visual divergence is expressed in QSS (not Python). */
QFrame#PanelChrome[panelVariant="card"] {
    /* Default card-like panel. Keep as the base. */
}

QFrame#PanelChrome[panelVariant="table"] {
    /* Dense, table-like surfaces. */
}

QFrame#PanelChrome[panelVariant="concept"] {
    background-color: #2a2f3a;
}

/* Panel Body */
QFrame#PanelBody {
    background-color: transparent; /* Let container bg show through or set specific */
}

/* Common Bar Styling */
QFrame[barRole="primary"],
QFrame[barRole="secondary"],
QFrame[barRole="tertiary"],
QFrame[barRole="footer"] {
    border-bottom: 1px solid #20242d;
    background-color: transparent; /* Match panel background */
}

/* Section Bar (In-Body) */
QFrame[barRole="section"] {
    background-color: transparent; /* Match panel background */
    border-top: 1px solid #d97706; /* Gold/Amber */
    border-bottom: 1px solid #d97706;
    min-height: 26px; /* Increased from 22px */
    max-height: 26px;
    padding: 0px 8px;
}

QLabel#SectionTitle {
    font-size: 18px; /* Match PanelTitle */
    font-weight: 700;
    color: #f3f4f6;
    text-transform: uppercase;
    background-color: transparent;
}

QLabel#SectionColumnLabel {
    color: #9ca3af;
    font-family: "Roboto Condensed", sans-serif;
    font-size: 18px;
    font-weight: 700;
    text-transform: uppercase;
    background-color: transparent;
}

/* --- Key/Value list (detail panels) --- */
QFrame#KeyValueList {
    background-color: transparent;
}

QFrame#KeyValueRow {
    min-height: 28px;
    max-height: 28px;
}

QFrame#KeyValueRow[stripe="even"] {
    background-color: rgba(255, 255, 255, 0.03);
}

QFrame#KeyValueRow[stripe="odd"] {
    background-color: rgba(255, 255, 255, 0.00);
}

QLabel#KeyValueKey {
    color: #cbd5e1;
    font-size: 17px;
    font-weight: 600;
}

QLabel#KeyValueValue {
    color: #e5e7eb;
    font-size: 17px;
    font-weight: 600;
}

/* --- Rating bars --- */
QFrame#RatingBarRow {
    background-color: transparent;
}

QLabel#RatingLabel {
    color: #cbd5e1;
    font-size: 17px;
    font-weight: 600;
    min-width: 150px;
}

QLabel#RatingNumbers {
    color: #cbd5e1;
    font-family: "Roboto Condensed", sans-serif;
    font-size: 17px;
    font-weight: 700;
}

QFrame#RatingTrack {
    background-color: #3a3f4b;
    border-radius: 3px;
}

QFrame#RatingFillCurrent[currentTier="elite"] { background-color: #0284c7; }   /* blue */
QFrame#RatingFillCurrent[currentTier="good"] { background-color: #10b981; }    /* green */
QFrame#RatingFillCurrent[currentTier="avg"]  { background-color: #f59e0b; }    /* amber */
QFrame#RatingFillCurrent[currentTier="poor"] { background-color: #ef4444; }    /* red */

QFrame#RatingFillPotential {
    background-color: rgba(255, 255, 255, 0.25);
}

/* --- OOTPTableView (QTableView) --- */
QTableView#OOTPTableView {
    background-color: transparent;
    border: none;
    selection-background-color: #2c3140;
    selection-color: #e5e7eb;
}

QHeaderView::section {
