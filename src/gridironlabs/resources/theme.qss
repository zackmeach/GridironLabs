    border-bottom: 1px solid #1c1f27;
}

QFrame#StandingsRow:hover {
    background-color: #2c3140;
}

QLabel#StandingsCell {
    color: #cbd5e1;
    font-family: "Roboto Condensed", sans-serif;
    font-size: 18px; /* Match main title */
    font-weight: 700;
}

QLabel#StandingsTeamCell {
    color: #e5e7eb;
    font-weight: 700;
    font-size: 18px; /* Match main title */
}

QLabel#StandingsTeamLogo {
    background-color: transparent;
}

/* Scroll area transparency */
QWidget#LeagueStandingsWidget, 
QWidget#StandingsContent,
QScrollArea[scrollVariant="hidden"] {
    background-color: transparent;
    border: none;
}
